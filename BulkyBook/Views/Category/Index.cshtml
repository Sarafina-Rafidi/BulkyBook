@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Category Index</h1>


<div class="container box-shadow p-3">
    <table class="table table-bordered table-stripped">
        <thead>
            <tr>
                <th>Category Name</th>

                <th>Display Order</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

